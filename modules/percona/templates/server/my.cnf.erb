[mysqld]
server_id = <%= @server_id %>

datadir = /var/lib/mysql
user    = mysql

log_error = error.log

log-bin
binlog_format    = ROW
log_slave_update = 1
relay_log_purge  = 0
replicate-ignore-db = mysql

innodb_locks_unsafe_for_binlog = 1
innodb_autoinc_lock_mode       = 2
innodb_log_file_size           = 64M

[mysql]
prompt="<%= @hostname %> mysql> "
